<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventTicket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col text-right">
                    <div class="mt-3" >
                        <a asp-controller="Order" asp-action="Index">My orders</a>

                    </div>
                </div>
            </div>
            <div class="row mb-3 pb-3 pt-1">
                <div class="col-md-9">
                    <a class="navbar-brand" asp-controller="EventCatalog" asp-action="Index">
                        <img 
                             src="https://images.squarespace-cdn.com/content/v1/5b33e7389772ae094e7fed7d/1608546391963-EMT70OX1KTT3NJ7DOHCM/Giving+%281%29.png?format=1500w" 
                             style="width: 60%;">
                    </a>
                </div>
                <div class="col-md-3 mt-5">
                    <div>
                        @RenderSection("Widget", required: false)
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
